    <application
        android:name=".App"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        android:hardwareAccelerated="true"
        android:requestLegacyExternalStorage="true" >

        <activity
            android:name=".SplashScreenTest"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="locale"
            android:label="@string/app_name_test"
            android:theme="@style/AppThemeNoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".SplashScreen"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".SplashScreenScheme"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="app.start"
                    android:scheme="domaado" />

            </intent-filter>

        </activity>

        <activity
            android:name=".GuideView"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Translucent" >
        </activity>

        <activity
            android:name=".CheckInternetConnection"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
        </activity>

        <activity
            android:name=".submenus.WebContentActivity"
            android:configChanges="orientation|keyboardHidden"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"
            android:exported="true">

            <intent-filter>
                <data android:host="kakaolink"
                    android:scheme="kakao06ccae9212b4d158ab68abb213baf150" />
            </intent-filter>

        </activity>

        <!-- Image Picker activity -->
        <activity
            android:name=".camera.ImagePickerActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <!-- uCrop cropping activity -->
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".camera.CameraActivity"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" >
        </activity>

        <activity
            android:name=".camera.CameraViewOlderActivity"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" >
        </activity>

        <activity
            android:name=".camera.Camera2BasicFragment"
            android:configChanges="orientation"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Translucent" >
        </activity>

        <activity
            android:name=".camera.CameraKitActivity"
            android:configChanges="orientation|screenLayout"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Translucent" >
        </activity>

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data android:host="oauth"
                    android:scheme="kakao06ccae9212b4d158ab68abb213baf150" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <service
            android:name=".service.ReportLocationService"
            android:process=":DLRService"
            android:exported="false">
            <intent-filter>
                <action android:name=".REPORT_USER_LOCATION"/>
            </intent-filter>
        </service>

        <!-- FCM -->
        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

