<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 백그라운드 이미지 시작 -->
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:lottie_rawRes="@raw/domado_splashscreen"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:background="@drawable/trans_space"
        />

    <!-- 하단에 잠시만 기다려주세요 텍스트 시작 -->
    <!-- 하단에 잠시만 기다려주세요 텍스트 끝 -->

    <RelativeLayout
        android:id="@+id/intro_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trans_space"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/intro_logo_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/intro_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/screen"
                android:visibility="visible" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/introMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_logo_box"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:text="@string/intro_message_tit"
            android:textColor="@color/DarkGrey"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/copyright"
            style="@style/CopyrightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="@string/copyright"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:visibility="gone" />


    </RelativeLayout>

</FrameLayout>