<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/sub_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55.7dp"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:id="@+id/sub_top_back_btn_box"
            android:layout_width="56.8dp"
            android:layout_height="56.8dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/sub_top_back_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginBottom="17.4dp"
                android:layout_marginLeft="17.4dp"
                android:layout_marginTop="17.4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/common_btn_pageback_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55.7dp"
            android:layout_marginRight="55.7dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/sub_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.87"
                android:text="@null"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:typeface="sans" />

        </LinearLayout>

        <TextView
            android:id="@+id/sub_top_right_cmd"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17.4dp"
            android:layout_marginRight="17.4dp"
            android:layout_marginTop="17.4dp"
            android:lines="1"
            android:text="@string/sub_title_edit_text"
            android:textColor="@color/White"
            android:typeface="sans"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>