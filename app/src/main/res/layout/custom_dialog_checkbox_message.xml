<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="32.6dp"
        android:layout_marginRight="32.6dp"
        android:background="@color/White"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sub_view_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/checkbox_items_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/checkbox_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkbox_item1_checkbox"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/checkbox_square"
                                android:button="@null" />

                            <TextView
                                android:id="@+id/checkbox_item1_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha=".87"
                                android:text="@string/btn_no"
                                android:textColor="@color/Black"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/checkbox_item2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="18dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkbox_item2_checkbox"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/checkbox_square"
                                android:button="@null" />

                            <TextView
                                android:id="@+id/checkbox_item2_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha=".87"
                                android:text="@string/btn_yes"
                                android:textColor="@color/Black"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/theme_blue" />

                    <LinearLayout
                        android:id="@+id/popup_button_set_yn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/cd_no_btn"
                            android:layout_width="0dip"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_white"
                            android:text="@string/btn_no"
                            android:textColor="@color/theme_color"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/cd_ok_btn"
                            android:layout_width="0dip"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_blue"
                            android:text="@string/btn_yes"
                            android:textColor="@color/White"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/popup_button_set_ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/cd_close_btn"
                            android:layout_width="0dip"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_blue"
                            android:text="@string/btn_close"
                            android:textColor="@color/White"
                            android:textSize="17.4sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </ScrollView>


    </LinearLayout>


</FrameLayout>