<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_marker_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/trans_space">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_valet_marker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/round_box_theme2_light"
            android:elevation="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:maxWidth="80dp"
            android:outlineProvider="bounds"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="강남역센터"
            android:textColor="@color/White"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/custom_valet_marker_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@+id/custom_valet_marker_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_pin_ltblue" />

        <TextView
            android:id="@+id/custom_valet_marker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/custom_valet_marker_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:text="출발"
            android:textColor="@color/White"
            android:textSize="11sp" />
    </RelativeLayout>

</FrameLayout>