<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/bottom_select_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="70dp"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="40dp"
        android:background="@drawable/rounded_white_top_15_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_select_close"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="5dp"
            android:src="@drawable/popup_close_dark"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/bottom_select_camera"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bottom_select_camera_icon"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_camera"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/bottom_select_camera_ti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/lbl_take_camera_picture"
                        android:textColor="@color/DarkGrey"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_select_gallery"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bottom_select_gallery_icon"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_gallery"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/bottom_select_gallery_ti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/lbl_choose_from_gallery"
                        android:textColor="@color/DarkGrey"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>