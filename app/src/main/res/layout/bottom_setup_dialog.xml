<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/bottom_setup_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="70dp"
        android:paddingTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="40dp"
        android:background="@drawable/rounded_white_top_15_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bottom_setup_message_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textColor="@color/DarkGrey"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/bottom_setup_message_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="124dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/icon_camera"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/bottom_setup_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ALERT TEXT MESSAGE"
                    android:textColor="@color/DarkGrey"
                    android:textSize="16sp"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bottom_setup_close_btn"
                android:layout_width="0dip"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_cancel"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"
                android:background="@drawable/selector_btn_bottom_alert_left"/>

            <Button
                android:id="@+id/bottom_setup_confirm_btn"
                android:layout_width="0dip"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:text="@string/btn_setting"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:background="@drawable/selector_btn_white_purple"/>

            <Button
                android:id="@+id/bottom_setup_other_btn"
                android:layout_width="0dip"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:text="@string/btn_setting"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:background="@drawable/selector_btn_white_purple"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>