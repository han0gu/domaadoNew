<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CodeScannerView">
        <attr format="color" name="maskColor"/>
        <attr format="color" name="frameColor"/>
        <attr format="color" name="autoFocusButtonColor"/>
        <attr format="color" name="flashButtonColor"/>
        <attr format="boolean" name="autoFocusButtonVisible"/>
        <attr format="boolean" name="flashButtonVisible"/>
        <attr format="dimension" name="frameThickness"/>
        <attr format="dimension" name="frameCornersSize"/>
        <attr format="float" name="frameCornersRadiusX" />
        <attr format="float" name="frameCornersRadiusY"/>
        <attr format="float" name="frameAspectRatioWidth"/>
        <attr format="float" name="frameAspectRatioHeight"/>
        <attr format="float" name="frameSize"/>
    </declare-styleable>

    <declare-styleable name="CameraControls">
        <attr name="camera" format="reference" />
        <attr name="cover" format="reference" />
    </declare-styleable>

    <attr name="horizontalPickerStyle" format="reference" />

    <declare-styleable name="RoundedView">
        <attr name="topLeftCornerRadius" format="dimension" />
        <attr name="topRightCornerRadius" format="dimension" />
        <attr name="bottomLeftCornerRadius" format="dimension" />
        <attr name="bottomRightCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ClockSlider">
        <attr name="cc_borderWidth" format="dimension" />
        <attr name="cc_metricTextSize" format="dimension" />
        <attr name="cc_minuteTextSize" format="dimension" />
        <attr name="cc_borderColor" format="color" />
        <attr name="cc_fillColor" format="color" />
        <attr name="cc_tickTextColor" format="color" />
        <attr name="cc_minuteTextColor" format="color" />
        <attr name="cc_startIconResource" format="reference" />
        <attr name="cc_endIconResource" format="reference" />
        <attr name="cc_is24HR" format="boolean" />
        <attr name="cc_startHour" format="float" />
        <attr name="cc_endHour" format="float" />
        <attr name="cc_metricMode" format="enum">
            <enum name="counter" value="0" />
            <enum name="clock" value="1" />
        </attr>
    </declare-styleable>

